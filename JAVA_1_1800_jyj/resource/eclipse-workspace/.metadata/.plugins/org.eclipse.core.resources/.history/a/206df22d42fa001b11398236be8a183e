package java멘토씨;

import java.util.*;
import java.util.Scanner;

public class Map1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		HashMap<String, String> hm = new HashMap<>();
		Scanner sc = new Scanner(System.in);

		while (run) {
			// 1.put(key,value)
			hm.put("apple", "사과");
			hm.put("paper", "종이");
			hm.put("flower", "꽃");
			
			String voca;
			boolean run = true;

			System.out.println("멈추고 싶다면 q를 누르세요//모든 사전:'all'를 누르세요 //종료: exit");
			System.out.print("알고싶은 단어를 입력하세요:");
			voca = sc.next();

			// 모든 사전을 보고 싶다면
		
			if (voca.equals("exit")) {
				System.out.println("종료합니다.");
				break;
			}
			if (voca.equals("all")) {
				iteratorUsingIterator(hm);
				continue;
			}


			// 2.containsKey(key): key가 hashmap에 존재하면 true
			if (hm.containsKey(voca)) {
				// 3. get(key):value반환
				System.out.println("해당하는 뜻은:" + hm.get(voca));

			} else {
				System.out.println(voca + " 단어의 뜻을 데이터베이스에 없습니다.");
				System.out.println("★해당 단어와 뜻을 입력하세요");
				hm.put(sc.nextLine(), sc.nextLine());
			}
		}

	}

	static void iteratorUsingIterator(HashMap map) {
		Set<Map.Entry<String, String>>entries =map.entrySet();
		for(Map.Entry<String, String> entry :entries) {
			System.out.println(entry.getKey()+" : "+entry.getValue());
		}
	}

}
